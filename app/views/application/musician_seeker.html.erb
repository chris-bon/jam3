<div class="container center_div center_text">
<h1>Musician Seeker</h1>


<%= form_tag '/profiles', class: 'form-horizontal', role: 'form',
                          method: :get do %>
<div class="form-group">
  <div class="col-sm-3 control-label">
    <%= label_tag :name %>
  </div>
  <div class="col-sm-7">
    <%= text_field_tag :name, params[:name], class: 'form-control', 
                       placeholder: 'Name' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-3 control-label">
    <%= label_tag :age %>
  </div>
  <div class="col-sm-7">
    <%= text_field_tag :age, params[:age], class: 'form-control', 
                       placeholder: 'Age' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-3 control-label">
    <%= label_tag :gender %>
  </div>
  <div class="col-sm-4">
    <div class="radio-inline">
      <label>
        <input type="radio" name="gender" id="gender" value="male" />Male
      </label>
    </div>
  </div>
  <div class="col-sm-2">
    <div class="radio-inline">
      <label>
        <input type="radio" name="gender" id="gender" value="female" /> 
          Female
      </label>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-3 control-label">
    <%= label_tag :location %>
  </div>
  <div class="col-sm-7">
    <%= text_field_tag :location, params[:location], class: 'form-control', 
                       placeholder: 'Enter a city' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-3 control-label">
    <%= label_tag :genre %>
  </div>
  <div class="col-sm-7">
    <%= text_field_tag :genre, params[:genre], class: 'form-control', 
                       placeholder: 'Enter a genre' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-3 control-label">
    <%= label_tag :availability %>
  </div>
  <div class="col-sm-7">
    <%= text_field_tag :availability, params[:availability], 
                       class: 'form-control',
                       placeholder: 'e.g., Sat, Sun, Mon' %>
  </div>
</div>
<div class="form-group">
  <button type="submit" class="btn btn-primary btn-lg">Search Musicians 
    <span class="glyphicon glyphicon-search"></span>
  </button>
</div>
<% end %>
</div>