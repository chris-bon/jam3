<div class="container center_div center_text">
  <%= form_for resource, as: resource_name, url: session_path(resource_name),
                         class: 'form-signin' do |f| %>

    <h2 class="form-signin-heading">Sign In</h2><%= tag 'br' %>

    <div class="form-inline">
      <%= f.label :login, 'Username or Email', class: 'control-label' %>
      <%= tag 'br' %>
      <%= f.text_field :login, autofocus: true, class: 'form-control', 
                               placeholder: 'Username or Email' %>
      <%= tag 'br' %><%= tag 'br' %>
    </div>
    <div class="form-inline">
      <%= f.label :password, 'Password', class: 'control-label' %>
      <%= tag 'br' %>
      <%= f.password_field :password, placeholder: 'Password', 
          class: 'form-control', autocomplete: 'off' %>
      <%= tag 'br' %><%= tag 'br' %>
    </div>
    <%= f.button 'Sign in', class: 'btn btn-lg btn-primary' %>
    <%= tag 'br' %><%= tag 'br' %>
    <% if devise_mapping.rememberable? %>
      <label>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </label>
    <% end %>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>