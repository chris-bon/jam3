<div ng-app="app" ng-controller="profilesCtrl" ng-init="setup()">
<ul>
  <li ng-repeat="error in errors">{{ error }}</li>
</ul>

<datalist id="instruments">
  <option ng-repeat="profile in profiles">{{ profile.instruments }}</option>
</datalist>

Filter by instrument: <input ng-model="instrumentFilter" list="instruments">

<!-- <datalist id="genres">
  <option ng-repeat="profile in profiles">{{ profile.genres }}</option>
</datalist>

Filter by genre: <input ng-model="genreFilter" list="genres"> -->

<table class="table table-hover">
<tr>
  <th><a href="#" ng-click="toggleOrder('username')">Username</a></th>
  <th><a href="#" ng-click="toggleOrder('email')">Email</a></th>
  <th><a href="#" ng-click="toggleOrder('name')">Name</a></th>
  <th><a href="#" ng-click="toggleOrder('age')">Age</a></th>
  <th>Gender</th>
  <th><a href="#" ng-click="toggleOrder('instruments')">Instruments</a></th>
  <th><a href="#" ng-click="toggleOrder('genre')">Genre</a></th>
  <th><a href="#" ng-click="toggleOrder('availability')">Availability</a></th>
</tr>

<tr ng-repeat="profile in profiles | orderBy: orderAttribute:descending |
            filter: instrumentFilter" >

        <!--     filter: genreFilter" > -->
  <td>{{profile.user.username}}</td>
  <td>{{profile.user.email}}</td>
  <td>{{profile.profile.name}}</td>
  <td>{{profile.profile.age}}</td>
  <td>{{profile.profile.gender}}</td>
  <td>{{array_to_list(profile.profile.instruments)}}</td>
  <td>{{profile.profile.genre}}</td>
  <td>{{profile.profile.availability}}</td>
</tr>

</table>
</div>