<div class="container">
<div class="alert alert-success" role="alert">New User Registered!</div>

  <h2>Setup Your Profile!</h2>
  <p>Fill out your profile to make it more searchable!</p>

<%= form_tag '/profiles', class: 'form-horizontal', method: :post do %>

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :name %></div>
  <div class="col-sm-10">
    <%= text_field_tag :name, @profile.name, class: 'form-control', 
                       placeholder: 'Name' %></div></div>

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :age %></div>
  <div class="col-sm-10">
    <%= text_field_tag :age, @profile.age, class: 'form-control', 
                       placeholder: 'Age' %></div></div>

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :gender %></div>
  <div class="col-sm-10">
    <%= text_field_tag :gender, @profile.gender, class: 'form-control', 
                       placeholder: 'Gender' %></div></div>

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :phone_number %></div>
  <div class="col-sm-10">
    <%= text_field_tag :phone_number, @profile.phone_number, 
                       class: 'form-control', 
                       placeholder: 'Phone Number' %></div></div>

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :email %></div>
  <div class="col-sm-10">
    <%= text_field_tag :email, @profile.age, class: 'form-control', 
                       placeholder: 'Email' %></div></div>

  <!--div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :location %></div>
  <div class="col-sm-10">
    <%= text_field_tag :location, @profile.location, class: 'form-control', 
                       placeholder: 'Location' %></div></div-->

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :instruments %></div>
  <div class="col-sm-10">
    <%= text_field_tag :instruments, @profile.instruments,
                       class: "form-control", 
                       placeholder: 'Instruments' %></div></div>

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :genres %></div>
  <div class="col-sm-10">
    <%= text_field_tag :genre, @profile.genre, class: 'form-control', 
                       placeholder: 'Genres' %></div></div>

  <div class="form-group"><div class="col-sm-2 control-label">
    <%= label_tag :availability %></div>
  <div class="col-sm-10">
    <%= text_field_tag :availability, @profile.availability, 
                       class: 'form-control', 
                       placeholder: 'Availability' %></div></div>

  <div class="form-group"><div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag "Submit", class: "btn btn-default" %></div></div>

<% end %>
</div>