<div class="container center_div center_text">

  <h2>Edit Your Profile <%= image_tag @profile.image_url, size: "80x80" %>
  </h2>
  <%= tag 'br' %>

<%= form_tag "/profiles/#{@profile.id}", class: 'form-horizontal', 
                                          method: :patch do %>
  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :avatar_url %></div>
    <div class="col-sm-9">
      <%= text_field_tag :image_url, @profile.image_url, class: 'form-control', 
                         placeholder: 'Enter a URL to an image' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :username %></div>
    <div class="col-sm-9">
      <%= text_field_tag :email, @profile.user.username, class: 'form-control', 
                         placeholder: 'Username' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :email %></div>
    <div class="col-sm-9">
      <%= text_field_tag :email, @profile.user.email, class: 'form-control', 
                         placeholder: 'Email' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :name %></div>
    <div class="col-sm-9">
      <%= text_field_tag :name, @profile.name, class: 'form-control', 
                         placeholder: 'Name' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :age %></div>
    <div class="col-sm-9">
      <%= text_field_tag :age, @profile.age, class: 'form-control', 
                         placeholder: 'Age' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :gender %></div>
    <div class="col-sm-9">
      <%= text_field_tag :gender, @profile.gender, class: 'form-control', 
                         placeholder: 'Gender' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :phone_number %></div>
    <div class="col-sm-9">
      <%= text_field_tag :phone_number, @profile.phone_number, 
                         class: 'form-control', 
                         placeholder: 'Phone number' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :location %></div>
    <div class="col-sm-9">
      <%= text_field_tag :location, @profile.location.city, 
                         class: 'form-control', 
                         placeholder: 'Location' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :instruments %></div>
    <div class="col-sm-9">
      <%= text_field_tag :instruments, @profile.instruments,
                         class: 'form-control', 
                         placeholder: 'Instruments' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :genres %></div>
    <div class="col-sm-9">
      <%= text_field_tag :genre, @profile.genre, class: 'form-control', 
                         placeholder: 'Genres' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"><%= label_tag :availability %></div>
    <div class="col-sm-9">
      <%= text_field_tag :availability, @profile.availability, 
                         class: 'form-control', 
                         placeholder: 'Availability' %>
    </div>
  </div>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-8">
    <% if @profile.hide %>
      <%= check_box_tag 'hide', 'true', true %>
    <% else %>
      <%= check_box_tag 'hide', 'true', false %>
    <% end %>
    Hide profile from other users
  </div>
</div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= submit_tag 'Submit Changes', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
</div>